<config-template xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">
    <device>
      <name>{/device1}</name>
        <config>
          <router xmlns="urn:ios">
            <bgp>
              <as-no>{/asn-dev1}</as-no>
              <bgp>
                <log-neighbor-changes/>
              </bgp>
              <neighbor>
                <id>192.168.0.2</id>
                <remote-as>{/asn-dev2}</remote-as>
              </neighbor>
              <neighbor>
                <id>192.168.0.6</id>
                <remote-as>{/asn-dev3}</remote-as>
              </neighbor>
              <network>
                <number>{/adv-route-dev1}</number>
                <mask>{/adv-mask-dev1}</mask>
              </network>
              <network>
                <number>192.168.1.0</number>
                <mask>255.255.255.0</mask>
              </network>
            </bgp>
          </router>
        </config>
    </device>
